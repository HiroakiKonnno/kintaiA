<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
  <div>
    <h1>勤怠編集画面</h1>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出勤時間</th>
          <th>退勤時間</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>指示確認㊞</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td class='<%= "wday#{day.worked_on.wday}"%>'> <%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></td>
              <% if (Date.current < day.worked_on) %>
                <td><%= attendance.time_field :before_changed_started_at, readonly: true, class: "form-control" %></td>
                <td><%= attendance.time_field :before_changed_finished_at, readonly: true, class: "form-control" %></td>
              <% else %>
                <td><%= attendance.time_field :before_changed_started_at, class: "form-control" %></td>
                <td><%= attendance.time_field :before_changed_finished_at, class: "form-control" %></td>
              <% end %>
              <td><%= attendance.check_box :day_tomorrow, {class: "check_box"}, "true", "false" %></td>
              <td>
                <% if day.before_changed_started_at.present? && day.before_changed_finished_at.present? %>
                  <%= working_times(day.before_changed_started_at, day.before_changed_finished_at) %>
                <% end %>
              </td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td><%= attendance.select :day_sperior, ['上長A', '上長B'], include_blank: true, class: 'sample' %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="center">
    <%= f.submit "編集内容を申請する", class: "btn btn-lg btn-primary" %>
    <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-lg btn-default" %>
  </div>
<% end %>