<% provide(:button_text, '編集') %>
<h1>基本情報の更新</h1>
 <div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for @user, url: update_basic_info_user_path(@user) do |f| %>
   
   <%= f.label :"基本時間", class: "label-signup" %>
　 <%= f.time_field :basic_time, class: "form-control" %>
   <%= f.label :"勤務時間", class: "label-signup" %>
   <%= f.time_field :work_time, class: "form-control" %>
   
   <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-signup" %>
   <% end %>
 </div>
</div>