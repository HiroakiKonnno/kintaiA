<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
        <%= l(@first_day, format: :middle) %>時間管理表
        <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td>指定勤務時間：<%= format_basic_info(@user.work_time) %></td>
      <td colspan="2">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.belonging.present? ? @user.belonging : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード</td>
      <td>出勤日数 <%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
    <% if @user.belonging == "上長A" || @user.belonging == "上長B" %>
      <div class = 'dec'>
        <% if @month_count == 0 %>
          <%= link_to "【所属長承認申請のお知らせ】", monthly_confirmation_info_user_path, remote: true %>
        <% else %>
          <%= link_to "【所属長承認申請のお知らせ】", monthly_confirmation_info_user_path, class: "link", remote: true %>
          <span style="padding: 1px; margin-bottom: 1px;  border: 1px solid #FF0000; color: #FF0000; font-weight:  bold;">
            <%= @month_count %>個の通知があります
          </span>
        <% end %>
      </div>
      <div class = 'dec'>
        <% if @day_count == 0 %>
          <%= link_to "【勤怠変更申請のお知らせ】", attendances_change_month_user_path, remote: true %>
        <% else %>
          <%= link_to "【勤怠変更申請のお知らせ】", attendances_change_month_user_path, remote: true %>
          <span style="padding: 1px; margin-bottom: 1px;  border: 1px solid #FF0000; color: #FF0000; font-weight:  bold;">
            <%= @day_count %>個の通知があります
          </span>
        <% end %>
      </div>
      <div class = 'dec'>
        <% if @overtime_count == 0 %>
          <%= link_to "【残業申請のお知らせ】", attendances_overtime_view_user_path, remote: true %>
        <% else %>
          <%= link_to "【残業申請のお知らせ】", attendances_overtime_view_user_path, remote: true %>
          <span style="padding: 1px; margin-bottom: 1px;  border: 1px solid #FF0000; color: #FF0000; font-weight:  bold;">
            <%= @overtime_count %>個の通知があります
          </span>
        <% end %>
      </div>
    <% end %>
  <% if @user == current_user %>
    <div class="btn-users-show">
      <%= link_to "勤怠編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
      <%= link_to "CSV出力", "#", class: "btn btn-primary" %>
    </div>

    <div class="btn-users-show">
      <%= link_to "勤怠修正ログ(承認済み)", attendances_user_log_user_path, class: "btn btn-primary" %>
    </div>
  <% end %>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="7">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">勤怠時間</th>
        <th colspan="2">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示確認㊞</th>
      </tr>
      
      <tr>
        <th>時</th>
        <th>分</th>
        <th>出社</th>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <% if day.day_status == '承認' %>
          <% day.log_changed_started_at = day.started_at %>
          <% day.log_changed_finished_at = day.finished_at %>
          <% day.started_at = day.before_changed_started_at %>
          <% day.finished_at = day.before_changed_finished_at %>
          <% day.save %>
        <% end %>
        <tr>
          <% if @user == current_user %>
            <td><%= link_to "残業申請", attendances_overtime_info_user_path(@user, date:day.worked_on), remote: true, class: "btn btn-primary" %></td>
          <% elsif %>
            <td></td>
          <% end %>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class='<%= "wday#{day.worked_on.wday}"%>'> <%=$days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minutes), format: :minute) if day.started_at.present? %></td>
          
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :minute) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td>
            <% if day.day_status == '承認' %>
              勤怠編集を承認しました
            <% elsif day.day_status == '否認' %>
              勤怠編集を否認しました
            <% else %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
      <% if @user == current_user %>
        <td colspan="1"><%= @attendances.count %></td>
      <% elsif %>
        <td></td>
      <% end %>
        <td colspan="2"></td>
        <td colspan="5"></td>
        <td colspan="1"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="1"></td>
        <td colspan="1"></td>
        <td colspan="1"></td>
        <td colspan="1"></td>
        <td colspan="1"></td>
        <td>
          <% if @approval.present? && @approval.month_status == "承認" %>
            所属長承認 <%= @approval.month_sperior %> から 承認済み
          <% elsif @deny.present? && @deny.month_status == "否認" %>
            所属長承認 <%= @deny.month_sperior %> から 否認済み
          <% else %>
            所属長承認 未
         <% end %>
         <% if @user == current_user %>
            <%= form_with model: @attendance, url: update_confirmation_user_path(@user), local: true, method: :patch do |f| %>
              <%= f.select :month_sperior, ['上長A', '上長B'], class: 'sample' %>
              <%= f.hidden_field :worked_on, value: @first_day %>
              <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
            <% end %>
         <% end %>
        </td>
      </tr>
    </tfoot> 
  </table>
</div>

<div id="monthly-confirmation-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="change-month" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="overtime-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="overtime-view" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>